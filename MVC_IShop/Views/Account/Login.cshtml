@model MVC_IShop.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<h2>Вход на сайт</h2>

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div id="frmdes" class="account-wall">
                    <img class="profile-img" src="~/Content/Auth.png" alt="">
                    @Html.AntiForgeryToken()
                    <br>
                    <div class="editor-field">@Html.ValidationMessageFor(Model => Model.Email)</div>
                    <input type="text" id="Login" name="Email" class="form-control" placeholder="Login" required autofocus>
                    <br>
                    <input type="password" class="form-control " id="Password" name="Password" placeholder="пароль..." required>
                    <br>
                    <input id="ReturnUrl" name="ReturnUrl" type="hidden" value="@ViewBag.ReturnUrl" />
                    <div class="row">
                        <div class="col-xs-12 ">
                            <button class="btn btn-success btn-lg btn-group btn-align-center" type="submit">Войти</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}