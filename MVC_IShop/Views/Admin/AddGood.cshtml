@model MVC_IShop.Models.AddGoodModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "RegisterService";
}

<h2>Добавление Товара</h2>

<div style="display: inline-block">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>
            <div class="editor-field">@Html.ValidationMessageFor(Model => Model.GoodName)</div>
            <hr />
            @Html.ValidationSummary(false)
            <div class="form-group">
                @Html.Label("Good Name", new { @class = "col-form-label" })
                <p>  @Html.EditorFor(model => model.GoodName, new { htmlAttributes = new { @class = "form-control" } }) </p>
            </div>
            <div class="form-group">
                @Html.Label("Manufacturer", new { @class = "col-form-label" })
                <p>  @Html.EditorFor(model => model.Manufacturer, new { htmlAttributes = new { @class = "form-control" } }) </p>
            </div>
            <div class="form-group">
                @Html.Label("Category", new { @class = "col-form-label" })
                <p>  @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })</p>
            </div>
            <div class="form-group">
                @Html.Label("Price", new { @class = "col-form-label" })
                <p>  @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })</p>
            </div>
            <div class="form-group">
                @Html.Label("GoodCount", new { @class = "col-form-label" })
                <p>@Html.EditorFor(model => model.GoodCount, new { htmlAttributes = new { @class = "form-control" } })</p>  @*new SelectList(new string[] { "ON", "OFF" }, Model.Status),*@
            </div>
            <div class="form-group">
                @Html.Label("Photo", new { @class = "col-form-label" })
                <p>@Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control" } })</p>
            </div>
            <div>
                <input type="submit" class="btn btn-outline-success" value="Сохранить">
            </div>
        </div>
    }
</div>