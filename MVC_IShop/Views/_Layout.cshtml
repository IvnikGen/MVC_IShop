<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ISHOp</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/rotate.js"></script>
 
</head>
<body>
    <header>
        <div class="logo"><img src="~/Content/logo.png"></div>
        <div class="label"><p>ISHOp</p></div>
        <div class="sort">@Html.Partial("~/Views/Shared/OrderPartial.cshtml")</div>
        <div class="search">@{Html.RenderAction("Search", "Navigation"); }</div>
        <div class="adm"><h5>@Html.Partial("~/Views/Shared/LoginPartial.cshtml")</h5></div>
        <div class="cart" onclick="location.href='@Url.Action("Index", "Cart")'"><span>К заказу</span><img src="~/Content/Cart.png"></div>
    </header>
    <div id="container">
        <nav class="navi" id="navi">
            @{
                Html.RenderAction("Menu", "Navigation");
                Html.RenderAction("Manufacturer", "Navigation");
            }
        </nav>
        <main style="margin-top:2%;">
            @RenderBody()
        </main>
    </div>
    <style>
        header {
            background: black;
            color: ghostwhite;
            padding: 10px;
            border-radius: 2px;
            color:ghostwhite;
        }
       .logo {
            border: 1px solid rgba(255,255,255,0.3);
            border-radius: 50%;
            box-shadow: 0px 0px 40px white;
            display: inline-block;
            width: 230px;
        }
       .logo img {
             width: 100%;
             border-radius: 50%;
         }
        .label {
            position: absolute;
            display: inline-block;
        }
        .label p {
                font-size: 35px;
                text-shadow: 22px 30px 8px darkgreen, 0 0 1em white;
                font-family: fantasy;
            }
        .sort {
            display: inline-block;
            position: absolute;
            margin-top: 77px;
            margin-left: 7%;
        }
        .search {
            position: absolute;
            margin-left: 35%;
            margin-top: 75px;
            display: inline-block;
        }
        .adm {
            display: inline-block;
            float: right;
        }
        .adm a {
            color: ghostwhite;
        }
        .adm a:hover {
                color:brown;
            }
        .cart {
            color:darkgreen;
            margin-top: 87px;
            margin-left: 77%;
            width: 90px;
            display: inline-block;
            position: absolute;
        }
        .cart span {
                font-size: 24px;
            }
        .cart img {
            width: 100%;
            border-radius: 40%;
        }
        .cart:hover {
                cursor: pointer;
                color: orange;
            }
        main {
            float: left;
            width: 70%;
        }
        .navi {
            box-shadow: 2px 2px 15px rgba(0,0,0,1);
            min-width: 350px;
            margin: 10px;
            display: inline-block;
            float: left;
            text-align: center;
            padding: 5px 0 15px 0;
            border-radius: 2px;
        }
        #goods_list {
            text-align: center;
            float: left;
        }
        .pages {
            margin-left: 30%;
            margin-top: 5%;
            clear: left;
        }
        .cardGood {
            width: 300px;
            height: 450px;
            margin-left: 40px;
            margin-bottom:10px;
            display: inline-block;
            padding:5px;     
        }
        .cardGood:hover {
                box-shadow: 1px 1px 15px rgba(0,200,0, 0.8);
                border-radius:5px;
                cursor: pointer;
            }
        .cardGood-body {

            }
        .cardGood-title{

            }
        .menu-item {
            color: black;
            border-bottom: 1px solid black;
            padding:10px 0 20px 0;
            margin:-1px;
        }
        .menu-item:hover {
             background: rgba(0,0,0, 0.2);
             cursor:pointer;
         }
        .menuTitle{
            color:ghostwhite;
            border-radius:2px;
            background:black;
        }
        a {
            color:black;
            text-decoration: none;
        }
        a:hover {
            color:black;
            text-decoration: none;
            }
        #filters {
            padding: 5px;
            display: none;
            position: fixed;
            box-shadow: 0 0 10px rgba(0,0,0, 0.5);
            margin-left: 65%;
        }
        .filtrinfo {
            margin: 2px;
            padding: 5px;
            display: inline-block;
            border-radius: 5px;
            background-color: black;
            color: ghostwhite;
        }
        .filtrclose {
            color: ghostwhite;
            font-weight: bold;
        }
        .filtrclose:hover {
                color: red;
                cursor:pointer;
            }
    </style>
    <script>
        $('.cart img').rotate({
                bind:
                {
                    mouseover: function () {
                        $(this).rotate({ animateTo: 180 })
                    },
                    mouseout: function () {
                        $(this).rotate({ animateTo: 0 })
                    }
                }

        });
    </script>
</body>
</html>

